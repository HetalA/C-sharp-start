@model flightmvc.Models.HetalBooking

@{
    ViewData["Title"] = "AddBooking";
}

<h1><center>Book With Us Now!</center></h1>

<hr />
<div class="col-md-12">
    <form asp-action="AddBooking">
    <table border="1px">
        <tr>
            <td>
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="FlightId" class="control-label">From</label>
                <select asp-for="FlightId" class="form-control" asp-items="@ViewBag.src"></select>
            </div>
            <div class="form-group">
                <label asp-for="FlightId" class="control-label">To</label>
                <select asp-for="FlightId" class="form-control" asp-items="@ViewBag.dest"></select>
            </div>
            <div class="form-group">
                <label asp-for="BookingDate" class="control-label">Date of Travel</label>
                <input asp-for="BookingDate" class="form-control" />
                <span asp-validation-for="BookingDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="NoOfPassengers" class="control-label">Passengers</label>
                <input asp-for="NoOfPassengers" class="form-control" />
                <span asp-validation-for="NoOfPassengers" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TotalCost" class="control-label"></label>
                <span asp-validation-for="TotalCost" class="text-danger"></span>
            </div>
            </td>
            <td>
            <img src="https://g.foolcdn.com/editorial/images/563400/airplanetakingoff.jpg">
            </td>
        </tr>
    </table>
    <div class="form-group">
                <input type="submit" value="Book Now" class="btn btn-primary" />
            </div>
        </form>
    <div class="col-md-4"></div>



@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
