@model flightmvc.Models.HetalBooking

@{
    ViewData["Title"] = "EditBooking";
}

<h1>EditBooking</h1>

<h4>HetalBooking</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="EditBooking">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="BookingDate" class="control-label"></label>
                <input asp-for="BookingDate" class="form-control" />
                <span asp-validation-for="BookingDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="NoOfPassengers" class="control-label"></label>
                <input asp-for="NoOfPassengers" class="form-control" />
                <span asp-validation-for="NoOfPassengers" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TotalCost" class="control-label"></label>
                <input asp-for="TotalCost" class="form-control" />
                <span asp-validation-for="TotalCost" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Edit" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="ShowBookings">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
